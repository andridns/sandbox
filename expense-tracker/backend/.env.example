# Expense Tracker Backend - Environment Variables Example
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# Database Configuration
# PostgreSQL is used for both development and production
# Local development example: postgresql://user:password@localhost:5432/expense_tracker
# Production: Use PostgreSQL connection string from Railway or your hosting provider
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/expense_tracker
# Example PostgreSQL: postgresql://user:password@host:port/database

# Admin User Credentials
# These are used to create/update the admin user on startup
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=
# ⚠️ IMPORTANT: Change this to a strong password in production!

# Security
# Secret key for JWT tokens (auto-generated if not set, but recommended for production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Default: http://localhost:5173,http://localhost:3000
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Google OAuth Configuration (Optional)
# Get from Google Cloud Console: https://console.cloud.google.com/
# Required for Google Sign-In functionality
GOOGLE_CLIENT_ID=

# Email Whitelist for Google OAuth (Optional)
# Comma-separated list of allowed email addresses
# Only these emails will be able to sign in via Google OAuth
# If not set, all Google-authenticated users will be allowed (not recommended for production)
ALLOWED_EMAILS=

# Server Configuration
# Port for the server (default: 8000)
PORT=8000

# Environment
# Set to "production" for production deployments
# Set to "development" for local development
ENVIRONMENT=development
